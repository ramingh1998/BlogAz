@model BlogAz.Web.Areas.Admin.ViewModels.Auth.LoginViewModel
@{
	Layout = null;
}
<!DOCTYPE html>
<html lang="fa">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>
		Admin panelinə giriş.
	</title>
</head>
<body>
	<div class="login-container">
		<h2>Admin Panel Girişi</h2>
		<form asp-area="Admin" asp-controller="Auth" asp-action="Login">

			<div class="form-group">
				<label for="UserName">İstifadəçi adı</label>
				<input type="text" id="UserName" asp-for="UserName" class="input-field" />
				<span class="text-danger">@Html.ValidationMessageFor(m => m.UserName)</span>
			</div>

			<div class="form-group">
				<label for="Password">Şifrə</label>
				<input type="password" id="Password" asp-for="Password" class="input-field" />
				<span class="text-danger">@Html.ValidationMessageFor(m => m.Password)</span>
			</div>
			<div class="remember-me">
				<label>
					<input type="checkbox" asp-for="RememberMe"> Məni xatırla
				</label>
			</div>
			<button type="submit" class="btn-login">Giriş</button>
		</form>
	</div>

	<div class="footer">
		<p>&copy; 2024 Admin Panel. Bütün hüquqlar qorunur.</p>
	</div>
</body>
</html>
