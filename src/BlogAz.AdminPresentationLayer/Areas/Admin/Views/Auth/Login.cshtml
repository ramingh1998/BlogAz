@model BlogAz.AdminPresentationLayer.Areas.Admin.ViewModels.Auth.LoginViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="fa">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ورود به پنل ادمین</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Arial', sans-serif;
            background-color: #34495e;
            color: #fff;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background: linear-gradient(135deg, #3498db, #2ecc71);
            overflow: hidden;
        }

        .login-container {
            background-color: rgba(0, 0, 0, 0.7);
            padding: 40px;
            border-radius: 12px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
            width: 100%;
            max-width: 400px;
            text-align: center;
        }

            .login-container h2 {
                font-size: 36px;
                margin-bottom: 20px;
                color: #fff;
                font-weight: 600;
                text-transform: uppercase;
            }

        .input-field {
            width: 100%;
            padding: 18px;
            margin: 12px 0;
            background: #2c3e50;
            border: 2px solid #34495e;
            border-radius: 10px;
            font-size: 18px;
            color: #fff;
            outline: none;
            transition: border 0.3s ease;
        }

            .input-field:focus {
                border-color: #3498db;
            }

        .remember-me {
            text-align: left;
            margin: 12px 0;
            font-size: 16px;
        }

            .remember-me input {
                width: auto;
                margin-right: 10px;
            }

        .btn-login {
            width: 100%;
            padding: 18px;
            background: #3498db;
            color: #fff;
            border: none;
            border-radius: 10px;
            font-size: 20px;
            cursor: pointer;
            transition: all 0.3s ease-in-out;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }

            .btn-login:hover {
                background-color: #2980b9;
                transform: translateY(-5px);
                box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
            }

        .forgot-password {
            margin-top: 15px;
        }

            .forgot-password a {
                color: #3498db;
                text-decoration: none;
                font-size: 16px;
                transition: color 0.3s ease;
            }

                .forgot-password a:hover {
                    color: #fff;
                }

        .footer {
            position: absolute;
            bottom: 20px;
            width: 100%;
            text-align: center;
            color: #fff;
            font-size: 14px;
        }

    </style>
</head>
<body>
    <div class="login-container">
        <h2>Admin Panel Girişi</h2>
        <form asp-area="Admin" asp-controller="Auth" asp-action="Login">
            
            <div class="form-group">
                <label for="UserName">İstifadəçi adı</label>
                <input type="text" id="UserName" asp-for="UserName" class="input-field" />
                <span class="text-danger">@Html.ValidationMessageFor(m => m.UserName)</span>
            </div>

            <div class="form-group">
                <label for="Password">Şifrə</label>
                <input type="password" id="Password" asp-for="Password" class="input-field" />
                <span class="text-danger">@Html.ValidationMessageFor(m => m.Password)</span>
            </div>
            <div class="remember-me">
                <label>
                    <input type="checkbox" asp-for="RememberMe"> Məni xatırla
                </label>
            </div>
            <button type="submit" class="btn-login">Giriş</button>
        </form>
    </div>

    <div class="footer">
        <p>&copy; 2024 Admin Panel. Bütün hüquqlar qorunur.</p>
    </div>
</body>
</html>
