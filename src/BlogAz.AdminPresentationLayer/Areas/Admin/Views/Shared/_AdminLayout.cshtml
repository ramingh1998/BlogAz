<!DOCTYPE html>
<html lang="en">
<head>
	<!-- Basic Page Needs
	================================================== -->
	<title>@ViewBag.Title</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta name="description" content="Courseplus is - Professional A unique and beautiful collection of UI elements">

	<!-- Favicon -->
	<link href="~/admin/assets/images/favicon.png" rel="icon" type="image/png">

	<!-- icons
	================================================== -->
	<link rel="stylesheet" href="~/admin/assets/css/icons.css">

	<!-- CSS
	================================================== -->

	<link rel="stylesheet" href="~/admin/assets/css/uikit.css">
	<link rel="stylesheet" href="~/admin/assets/css/style.css">
	<link rel="stylesheet" href="~/admin/assets/css/tailwind.css">
	<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
	<script src="~/lib/jquery/dist/jquery.min.js"></script>

	@await RenderSectionAsync("Styles", required: false)
</head>

<body>
	<div id="wrapper" class="is-verticle">
		<!--  Header  -->
		<partial name="_Header"></partial>
		<!-- Main Contents -->
		<div class="main_content">
			<div class="container">
				@RenderBody()
			</div>
		</div>

		<!-- sidebar -->
		<partial name="_Sidebar"></partial>
	</div>
	<!-- Javascript
	================================================== -->
	<script src="~/admin/assets/js/uikit.js"></script>
	<script src="~/admin/assets/js/tippy.all.min.js"></script>
	<script src="~/admin/assets/js/simplebar.js"></script>
	<script src="~/admin/assets/js/custom.js"></script>
	<script src="~/admin/assets/js/bootstrap-select.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/popper.js@2.9.2/dist/umd/popper.min.js"></script>
	<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
	<script src="https://unpkg.com/ionicons@5.2.3/dist/ionicons.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>

</html>
