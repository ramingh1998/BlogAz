@model BlogAz.Application.DTOs.Blogs.BlogDto
@using System.Globalization

@{
	ViewData["Title"] = "Bloq məlumatları";
	ViewBag.Selected = "Blogs";
}
<h1 class="text-4xl font-bold text-gray-800">@Model.Title</h1>

<img src="/Blog/Images/@Model.ImageName" alt="@Model.Title" class="rounded-lg shadow-lg w-full h-auto hover:scale-105 transform transition mt-4">

<div class="lg:flex lg:space-x-6 mt-6">
	<div class="lg:w-8/12 space-y-6">
		<div class="tube-card p-6 bg-gray-100 rounded-lg shadow-md">
			<p class="text-gray-700 leading-relaxed">
				@Html.Raw(Model.Content)
			</p>
		</div>
	</div>

	<div class="lg:w-4/12 space-y-6 lg:mt-0 mt-6">
		<div class="tube-card p-6 bg-gradient-to-br from-white via-gray-50 to-gray-100 rounded-2xl shadow-lg">
			<!-- تاریخ ایجاد -->
			<div class="flex items-center space-x-4 mb-6">
				<div class="bg-blue-500 text-white p-3 rounded-full shadow-md">
					<ion-icon name="calendar-outline" class="text-2xl"></ion-icon>
				</div>
				<div>
					<div class="text-sm text-gray-500">Yaradılma Tarixi</div>
					<div class="text-lg font-semibold text-gray-800">
						@Model.CreatedAt.ToString("dd MMMM yyyy", new CultureInfo("az-AZ"))
					</div>
				</div>
			</div>
			<hr class="border-gray-300 my-4">
			<h4 class="text-lg font-semibold text-gray-700 mb-4">Kateqoriyalar:</h4>
			<div class="space-y-3">
				@foreach (var item in Model.Categories)
				{
					<div class="flex items-center px-4 py-3 bg-white hover:bg-blue-50 border border-gray-200 rounded-lg transition-all shadow-sm">
						<ion-icon name="pricetag-outline" class="text-xl text-blue-500 mr-3"></ion-icon>
						<span class="text-gray-700 font-medium">@item.Name</span>
					</div>
				}
			</div>
		</div>
	</div>
</div>