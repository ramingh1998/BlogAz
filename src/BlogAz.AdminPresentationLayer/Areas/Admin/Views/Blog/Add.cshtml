@model BlogAz.AdminPresentationLayer.Areas.Admin.ViewModels.Blogs.BlogViewModel
@{
    ViewData["Title"] = "Blog Əlavə et";
    ViewBag.Selected = "Blogs";
}

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.ckeditor.com/ckeditor5/44.1.0/ckeditor5.css" />
    <link rel="stylesheet" href="~/admin/assets/global/blogStyle.css" asp-append-version="true" />
}

<div class="card">
    <div class="card-header">
        <h2>🌟 Yeni Bloq Əlavə Et 🌟</h2>
    </div>
    <div class="card-body">
        <form method="post" id="blogForm" enctype="multipart/form-data" asp-area="Admin" asp-controller="Blog" asp-action="Add">
            <div class="form-group">
                <label for="title">🖋️ Bloq Başlığı</label>
                <input type="text" asp-for="Title" class="form-control form-control-lg" placeholder="Bloq başlığını daxil edin" />
                <span class="text-danger" asp-validation-for="Title"></span>
            </div>
            <div class="form-group text-center">
                <label for="image" class="d-block mb-3" style="font-size: 1.2rem;">🖼️ Şəkil Yüklə</label>
                <div class="image-upload-container">
                    <input type="file" id="image" asp-for="ImageFile" class="form-control-file" required onchange="previewImage(this)">
                    <div id="imagePreview">
                        <i class="fas fa-upload fa-3x text-muted mb-3"></i>
                        <p class="text-muted mb-0">Şəkil seçmək üçün klikləyin və ya sürüşdürün</p>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label for="content">📜 Bloq Məzmunu</label>
                <textarea id="content" asp-for="Content" rows="5" class="form-control" placeholder="Bloq məzmununu daxil edin" style="width: 100%; height: 300px;"></textarea>
                <span class="text-danger" asp-validation-for="Content"></span>
            </div>
            <div class="form-group">
                <label for="categories">🏷️ Kateqoriyalar</label>
                <div id="categoryTreeContainer"></div>
                <input type="hidden" id="selectedCategories" name="CategoryIds" />
            </div>

            <div class="form-group mt-4">
                <div class="row">
                    <div class="col-6">
                        <button type="button" id="submitButton" class="btn btn-success">
                            <i class="fas fa-save"></i> Əlavə Et
                        </button>
                    </div>
                    <div class="col-6">
                        <a href="/Admin/Blog/Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Geri Qayıt
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div class="card-footer">
        <small>✍️ Daha yaxşı yazılar üçün yaradıcılığınızı paylaşın!</small>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.ckeditor.com/ckeditor5/39.0.1/classic/ckeditor.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
}
<script type="text/javascript">
    // بازگرداندن محتوای CKEditor به textarea هنگام ارسال
    document.querySelector("#blogForm").addEventListener("submit", function (e) {
        // قبل از ارسال فرم، محتوای CKEditor را به textarea منتقل می‌کنیم
        document.querySelector('#content').value = editorInstance.getData();
    });

    // پیش‌نمایش تصویر
    function previewImage(input) {
        const preview = document.getElementById('imagePreview');
        if (input.files && input.files[0]) {
            const reader = new FileReader();
            reader.onload = function (e) {
                preview.innerHTML = `<img src="${e.target.result}" alt="Selected Image" style="max-width: 100%; border-radius: 10px;">`;
            };
            reader.readAsDataURL(input.files[0]);
        } else {
            preview.innerHTML = `<i class="fas fa-upload fa-3x text-muted mb-3"></i> <p class="text-muted mb-0">Şəkil seçmək üçün klikləyin və ya sürüşdürün</p>`;
        }
    }

    // ایجاد درخت دسته‌بندی‌ها
    document.addEventListener('DOMContentLoaded', function () {
        var categoryTreeData = @Html.Raw(ViewBag.CategoryTreeJson);

        function buildCategoryTree(categories) {
            var treeHtml = '';
            categories.forEach(function (category) {
                treeHtml += `
                    <div>
                        <label>
                            <input type="checkbox" class="category-checkbox" value="${category.Id}" />
                            ${category.Name}
                        </label>
                `;
                if (category.SubCategories && category.SubCategories.length > 0) {
                    treeHtml += `<div style="padding-left: 20px;">`;
                    treeHtml += buildCategoryTree(category.SubCategories);
                    treeHtml += `</div>`;
                }
                treeHtml += `</div>`;
            });
            return treeHtml;
        }

        document.getElementById('categoryTreeContainer').innerHTML = buildCategoryTree(categoryTreeData);

        // ذخیره انتخاب‌ها در input hidden
        const categoryCheckboxes = document.querySelectorAll('.category-checkbox');
        const selectedCategoriesInput = document.getElementById('selectedCategories');

        categoryCheckboxes.forEach(function (checkbox) {
            checkbox.addEventListener('change', function () {
                var selectedIds = [];
                categoryCheckboxes.forEach(function (checkbox) {
                    if (checkbox.checked) {
                        selectedIds.push(checkbox.value);
                    }
                });
                selectedCategoriesInput.value = JSON.stringify(selectedIds); // ارسال به صورت آرایه
            });
        });
    });

    $(document).ready(function () {
        let editorInstance;

        // بارگذاری CKEditor
        ClassicEditor.create(document.querySelector('#content'), {
            toolbar: ['heading', '|', 'bold', 'italic', 'link', '|', 'bulletedList', 'numberedList', '|', 'blockQuote'],
            editable: {
                width: '100%',
                height: '300px'
            }
        }).then(editor => {
            editorInstance = editor;
        }).catch(error => {
            console.error(error);
        });

        // ارسال فرم با استفاده از AJAX
        $("#submitButton").on("click", function (e) {
            e.preventDefault();  // جلوگیری از ارسال پیش‌فرض فرم

            var form = $("#blogForm")[0];
            var formData = new FormData(form);

            // افزودن مقادیر CategoryIds به FormData
            var categoryIds = JSON.parse($("#selectedCategories").val());
            categoryIds.forEach(function (categoryId) {
                formData.append('CategoryIds', parseInt(categoryId)); // تبدیل به عدد صحیح (long)
            });

            // ارسال داده‌ها به سرور
            $.ajax({
                url: $(this).attr('action'), // مسیر درخواست
                type: 'POST',
                data: formData,
                processData: false,
                contentType: false,
                success: function (response) {
                    if (response.status == 200) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Bloq əlavə olundu!',
                            text: response.message
                        }).then(() => {
                            window.location.href = '/Admin/Blog/Index'; // هدایت به صفحه لیست بلاگ‌ها
                        });
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Xəta baş verdi!',
                            text: response.message
                        });
                    }
                },
                error: function (error) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Xəta baş verdi!',
                        text: 'Əməliyyat uğursuz oldu.' // پیام خطا در صورت بروز مشکل
                    });
                }
            });
        });
    });
</script>
